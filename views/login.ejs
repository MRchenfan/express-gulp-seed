<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel='stylesheet' href='css/style.min.css' />
	<link rel="stylesheet" href="css/login.min.css">
</head>
<body>

	<div class="main">
		<!-- header begin -->
		<%- include('common/header', { user: user, state: 'login' }) %>

		<!-- content begin -->
		<div class="content">
			<div class="login">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">
							user-center
						</h3>
					</div>
					<div class="panel-body clearfix">
						<form class="form-horizontal" name="userForm" novalidate >
							<div class="form-group">
								<label class="col-sm-2">name</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" name="name" placeholder="your namelength="4" maxlength="10" required>
									<p class="help-block small hide">
										name repeat 
									</p>
									<p class="help-block small hide">
										name required
									</p>
									<p class="help-block small hide">
										name length should be longer then 4
									</p>
									<p class="help-block small hide">
										name length should be shorter then 10
									</p>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2">email</label>
								<div class="col-sm-10">
									<input class="form-control" type="email" name="email" placeholder="your email@exapmle.com" required>
									<p class="help-block small hide">
										email required
									</p>
									<p class="help-block small hide">
										email is illegal
									</p>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2">password</label>
								<div class="col-sm-10">
									<input class="form-control" type="password" name="password" placeholder="******" required>
									<p class="help-block small hide">
										password is required
									</p>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-10 col-sm-offset-2">
									<button class="btn btn-primary">
										Sign in
									</button>
									<button class="btn btn-default">
										Register
									</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

		<!-- footer begin -->
		<%- include('common/footer') %>
	</div>

	<!-- sidebar begin -->
	<%- include('common/sidebar') %>

	<script src="lib/jquery/dist/jquery.min.js"></script>
	<script src="lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>

